<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateAdminManager">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập Nhật Dữ Liệu Admin"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/primary"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/photo"
                android:id="@+id/updateImageAdmin"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Admin"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateNameAdmin"
                android:background="@drawable/lavender_border"
                android:padding="16dp"

                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Admin"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateEmailAdmin"
                android:background="@drawable/lavender_border"
                android:padding="16dp"

                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu Admin"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updatePWAdmin"
                android:background="@drawable/lavender_border"
                android:padding="16dp"

                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp quàn trị"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:id="@+id/updateClassSpn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyền Truy Cập"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/QuyenTruyCap"
                android:background="@drawable/background_spinner"
                />
            <!--            <EditText-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:id="@+id/uploadLang"-->
            <!--                android:background="@drawable/lavender_border"-->
            <!--                android:layout_marginTop="0dp"-->
            <!--                android:padding="10dp"-->
            <!--                android:gravity="start|center_vertical"-->
            <!--                android:textColor="@color/lavender"/>-->



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadTime"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:visibility="gone"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lưu"
                android:id="@+id/saveAdminBtn"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>